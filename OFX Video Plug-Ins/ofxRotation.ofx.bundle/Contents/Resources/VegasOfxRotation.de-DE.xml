<!--
<!DOCTYPE OfxImageEffectResource SYSTEM "ofx.dtd">
 -->

<OfxImageEffectResource>  
  <OfxPlugin name="com.magixsoftware:panorotation">

		<!--
		Define the resouces overrides to be used for the host 'default' (or 'all' or 'com.vegascreativesoftware.vegas'
		    in the locale 'fr-FR' (or 'de-DE' or 'es-ES' or 'ja-JP')
			ofxHost="someHost"
		-->
		<OfxResourceSet ofxHost="default">

			<!-- Set the user visible label on the plug-in -->
			<OfxPropLabel>VEGAS Szenenrotation</OfxPropLabel>

			<OfxImageEffectPluginPropGrouping>VEGAS\360</OfxImageEffectPluginPropGrouping>

			<OfxPropPluginDescription>From Magix Computer Products Intl. Co.</OfxPropPluginDescription>

			<!--
	        Define default overrides that apply in all contexts (unless specified in a specific context)
			-->
			<OfxImageEffectContext name="default">
			</OfxImageEffectContext>
			
			<!--
	        Define default overrides that apply only in the generator context
			-->
			<OfxImageEffectContext name="OfxImageEffectContextFilter">				
				<OfxParamTypeDouble name="mx.ofx.plugin.rotate.x.angle">
                    <OfxPropLabel>Drehung um x-Achse</OfxPropLabel>
					<OfxPropShortLabel>Drehung um x-Achse</OfxPropShortLabel>
			        <OfxPropLongLabel>Drehung um x-Achse</OfxPropLongLabel>
					<OfxParamPropHint>Die Ansicht um die x-Achse drehen.</OfxParamPropHint>
                </OfxParamTypeDouble>
				
				<OfxParamTypeDouble name="mx.ofx.plugin.rotate.y.angle">
                    <OfxPropLabel>Drehung um y-Achse</OfxPropLabel>
					<OfxPropShortLabel>Drehung um y-Achse</OfxPropShortLabel>
			        <OfxPropLongLabel>Drehung um y-Achse</OfxPropLongLabel>
					<OfxParamPropHint>Die Ansicht um die y-Achse drehen.</OfxParamPropHint>
                </OfxParamTypeDouble>
				
				<OfxParamTypeDouble name="mx.ofx.plugin.rotate.z.angle">
                    <OfxPropLabel>Drehung um z-Achse</OfxPropLabel>
					<OfxPropShortLabel>Drehung um z-Achse</OfxPropShortLabel>
			        <OfxPropLongLabel>Drehung um z-Achse</OfxPropLongLabel>
					<OfxParamPropHint>Die Ansicht um die z-Achse drehen.</OfxParamPropHint>
                </OfxParamTypeDouble>
				
				<OfxParamTypeChoice name="mx.ofx.plugin.rotate.stereo">
					<OfxParamPropChoiceOption>Keine</OfxParamPropChoiceOption>
					<OfxParamPropChoiceOption>Oben-und-Unten</OfxParamPropChoiceOption>
					<OfxParamPropChoiceOption>Seite an Seite</OfxParamPropChoiceOption>
					<OfxPropLabel>Stereoskopie</OfxPropLabel>
					<OfxPropShortLabel>Stereoskopie</OfxPropShortLabel>
			        <OfxPropLongLabel>Stereoskopie</OfxPropLongLabel>
					<OfxParamPropHint>Zum Wählen eines stereoskopischen Zielformates.</OfxParamPropHint>
				</OfxParamTypeChoice>
				
			</OfxImageEffectContext>
		</OfxResourceSet>
	</OfxPlugin>
  
</OfxImageEffectResource>