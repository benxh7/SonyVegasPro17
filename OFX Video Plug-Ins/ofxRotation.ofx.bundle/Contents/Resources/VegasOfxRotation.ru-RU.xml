<!DOCTYPE OfxImageEffectResource SYSTEM "ofx.dtd">
 -->

<OfxImageEffectResource>  
  <OfxPlugin name="com.magixsoftware:panorotation">

		<!--
		Define the resouces overrides to be used for the host 'default' (or 'all' or 'com.vegascreativesoftware.vegas'
		    in the locale 'fr-FR' (or 'de-DE' or 'es-ES' or 'ja-JP')
			ofxHost="someHost"
		-->
		<OfxResourceSet ofxHost="default">

			<!-- Set the user visible label on the plug-in -->
			<OfxPropLabel>VEGAS Вращение материала</OfxPropLabel>

			<OfxImageEffectPluginPropGrouping>VEGAS\360</OfxImageEffectPluginPropGrouping>

			<OfxPropPluginDescription>Magix Computer Products Intl. Co.</OfxPropPluginDescription>

			<!--
	        Define default overrides that apply in all contexts (unless specified in a specific context)
			-->
			<OfxImageEffectContext name="default">
			</OfxImageEffectContext>
			
			<!--
	        Define default overrides that apply only in the generator context
			-->
			<OfxImageEffectContext name="OfxImageEffectContextFilter">				
				<OfxParamTypeDouble name="mx.ofx.plugin.rotate.x.angle">
                    <OfxPropLabel>Поворот по оси X</OfxPropLabel>
					<OfxPropShortLabel>Поворот по оси X</OfxPropShortLabel>
			        <OfxPropLongLabel>Поворот по оси X</OfxPropLongLabel>
					<OfxParamPropHint>Развернуть обзор по оси X</OfxParamPropHint>
                </OfxParamTypeDouble>
				
				<OfxParamTypeDouble name="mx.ofx.plugin.rotate.y.angle">
                    <OfxPropLabel>Поворот по оси Y</OfxPropLabel>
					<OfxPropShortLabel>Поворот по оси Y</OfxPropShortLabel>
			        <OfxPropLongLabel>Поворот по оси Y</OfxPropLongLabel>
					<OfxParamPropHint>Развернуть обзор по оси Y</OfxParamPropHint>
                </OfxParamTypeDouble>
				
				<OfxParamTypeDouble name="mx.ofx.plugin.rotate.z.angle">
                    <OfxPropLabel>Поворот по оси Z</OfxPropLabel>
					<OfxPropShortLabel>Поворот по оси Z</OfxPropShortLabel>
			        <OfxPropLongLabel>Поворот по оси Z</OfxPropLongLabel>
					<OfxParamPropHint>Развернуть обзор по оси Z</OfxParamPropHint>
                </OfxParamTypeDouble>
				
				<OfxParamTypeChoice name="mx.ofx.plugin.rotate.stereo">
					<OfxParamPropChoiceOption>Ничего</OfxParamPropChoiceOption>
					<OfxParamPropChoiceOption>Верх-низ</OfxParamPropChoiceOption>
					<OfxParamPropChoiceOption>Покатом</OfxParamPropChoiceOption>
					<OfxPropLabel>Стереоскопия</OfxPropLabel>
					<OfxPropShortLabel>Стереоскопия</OfxPropShortLabel>
			        <OfxPropLongLabel>Стереоскопия</OfxPropLongLabel>
					<OfxParamPropHint>Выберите конечный фомат 3D.</OfxParamPropHint>
				</OfxParamTypeChoice>
				
				<OfxMessage name="mx.ofx.plugin.rotate.warning.hostnotsupported">Выбранный элемент не поддерживается этим модулем.</OfxMessage>
				
				<OfxMessage name="mx.ofx.plugin.rotate.warning.unknown">Неизвестная ошибка</OfxMessage>
				
			</OfxImageEffectContext>
		</OfxResourceSet>
	</OfxPlugin>
  
</OfxImageEffectResource>